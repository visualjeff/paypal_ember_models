<br>
<div class="small-8 columns">
    <div class="panel">

        <h3>Paypal sale: {{id}}</h3>
        <br><br>
        <br>

        <form>
            <fieldset>

        <div class="input-wrapper">
            <label for="createTime">Create time:</label>
            {{view "textfield"
            type="text"
            viewName="createTime"
            valueBinding="createTime"
            disabled="true"
            size="10"
            }}
        </div>

        <div class="input-wrapper">
            <label for="updateTime">Update time:</label>
            {{view "textfield"
            type="text"
            viewName="updateTime"
            valueBinding="updateTime"
            disabled="true"
            size="10"
            }}
        </div>

        <div class="input-wrapper">
            <label for="status">Status:</label>
            {{view "textfield"
            type="text"
            viewName="status"
            valueBinding="status"
            disabled="true"
            size="10"
            }}
        </div>

        <div class="input-wrapper">
            <label for="total">Total:</label>
            {{view "textfield"
            type="text"
            viewName="total"
            valueBinding="total"
            disabled="true"
            size="10"
            }}
        </div>

        <div class="input-wrapper">
            <label for="currency">Currency:</label>
            {{view "textfield"
            type="text"
            viewName="currency"
            valueBinding="currency"
            disabled="true"
            size="10"
            }}
        </div>
        <br>

        {{#if canRefund}}
        <ul class="button-group right">
            <button class='button' {{action 'refund' this}}>Request Refund</button>
        </ul>
        {{/if}}
            </fieldset>
        </form>
</div>

{{#if canRefund}}
<div class="panel">
    <h3>Returned JSON</h3>
    <br><br>
    <br>
    <div class="input-wrapper">
        <label for="results">Results:</label>
        {{view "textarea"
        name="results"
        viewName="results"
        valueBinding="results"
        size="30"
        rows="8"
        }}
    </div>
</div>
</div>
{{/if}}
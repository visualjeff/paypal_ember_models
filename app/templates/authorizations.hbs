<fieldset>
    <legend>Authorized payments</legend>
    <table>
        <thead>
        <tr>
            <th width="150">Autorization Id</th>
            <th width="150">Create Time</th>
            <th width="150">Total</th>
            <th width="150">State</th>
            <th width="150"></th>
        </tr>
        </thead>
        <tbody>
        {{#each}}
            <tr>
                <td>{{authorizationId}}</td>
                <td>{{createTime}}</td>
                <td>${{total}}</td>
                <td>{{status}}</td>
                <td>
                    {{#if displayButtons}}
                    <ul class="button-group">
                        <button class='button tiny' {{action 'voidAuthorization' this}}>Void Authorization</button>
                    </ul>
                    <ul class="button-group">
                        <button class='button tiny' {{action 'capture' this}}>Capture sale</button>
                    </ul>
                    {{/if}}
                </td>
            </tr>
        {{/each}}
        </tbody>
    </table>
</fieldset>
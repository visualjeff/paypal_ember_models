<br>
<div class="small-8 columns">
    <div class="panel">
        <h3>Look up a refund by refundId</h3>
        <br><br>
        <form {{action 'lookupRefund' this on="submit"}}>
            <fieldset>

                <div class="input-wrapper">
                    <label for="transactionId">Refund ID:</label>
                    {{view "textfield"
                    type="text"
                    viewName="transactionId"
                    valueBinding="transactionId"
                    size="10"
                    }}
                </div>

                <br>
                <ul class="button-group right">
                    <button type="submit" class="small radius" {{bind-attr disabled=isProcessing}}>Lookup</button>
                </ul>
            </fieldset>
        </form>
    </div>



    <div class="panel">
        <h3>Returned JSON</h3>
        <br><br>
        <div class="input-wrapper">
            <label for="results">Results:</label>
            {{view "textarea"
            name="results"
            viewName="results"
            valueBinding="results"
            size="30"
            rows="8"
            }}
        </div>
    </div>
</div>